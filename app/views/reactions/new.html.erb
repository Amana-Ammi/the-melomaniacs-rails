<%= @reaction.review.title %> Review </h1><br>

<%= form_for(@reaction) do |f|%>

<div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
</div>
    <%= f.hidden_field :review_id %>
    
    <%= f.submit "REACT" %>

<% end %>