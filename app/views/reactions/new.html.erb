<h1>New Reaction to <%= @reaction.review.user.username.capitalize%>'s 
<%= @reaction.review.artist_name %> Review </h1><br>

<%= render partial: 'layouts/errors', locals: {i: @reaction} %>

<%= form_for(@reaction) do |f|%>

<div>
    <%= f.label :comment %>
    <%= f.text_area :comment %>
</div>
    <%= f.hidden_field :review_id %>

    <%= f.submit "REACT" %>

<% end %>