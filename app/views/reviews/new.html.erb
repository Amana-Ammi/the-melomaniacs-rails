<h1>LET'S HEAR IT!</h1>

<%= render partial: 'layouts/errors', locals: {i: @review} %>

<%= form_for(@review) do |f| %>
<div class="form">
    <%= f.label :title, "REVIEW TITLE:" %><br>
    <%= f.text_field :title %><br>

    <%= f.label :song_or_album_name, "SONG/ALBUM NAME:" %><br>
    <%= f.text_field :song_or_album_name %><br>
<br>

    <%= f.label :artist_name, "ARTIST NAME:" %><br>
    <%= f.text_field :artist_name %><br>
<br>
    <%= f.label :content, "CONTENT:" %><br>
    <%= f.text_area :content %><br>
<br>
    <%= f.submit "Share Your Opinion"%><br>
</div>
<% end %>

