<h1>Review Form Here</h1>

<%= render partial: 'layouts/errors', locals: {i: @review} %>

<%= form_for(@review) do |f| %>
<ul>
    <%= f.label :title, "REVIEW TITLE:" %>
    <li><%= f.text_field :title %></li>

    <li><%= f.label :song_name, "SONG NAME:" %>
    <li><%= f.text_field :song_name %></li>

    <%= f.label :album_name, "ALBUM NAME:" %>
    <li><%= f.text_field :album_name %></li>

    <%= f.label :artist_name, "ARTIST NAME:" %>
    <li><%= f.text_field :artist_name %></li>

    <%= f.label :content, "CONTENT:" %>
    <li><%= f.text_area :content %></li>

    <%= f.submit "Share Your Opinion"%></li>
</ul>
<% end %>

