<h1>EDIT REVIEW</h1>

<div class="form">
<%= form_for(@review) do |f| %>

    <%= f.label :title, "REVIEW TITLE:" %>
    <%= f.text_field :title %><br><br>

    <%= f.label :song_or_album_name, "SONG/ALBUM NAME:" %>
    <%= f.text_field :song_or_album_name %><br><br>


    <%= f.label :artist_name, "ARTIST NAME:" %>
    <%= f.text_field :artist_name %><br><br>

    <%= f.label :content, "CONTENT:" %>
    <%= f.text_area :content %><br><br>

    <%= f.submit "Edit Review" %><br><br>
<% end %>
</div>