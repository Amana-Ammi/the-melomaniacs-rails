<h1> Login</h1>  

<%= flash[:error] %><br><br>

<div class="form" >
    <%= form_for(:user) do |f|%>

        <%= f.label :email %>	
        <%= f.email_field :email %><br><br>


        <%= f.label :password %>	
        <%= f.password_field :password %><br><br>

        <%= f.submit "SUBMIT" %><br><br>

        <%= link_to('Log in with Facebook!', '/auth/facebook') %>

    <%end%>
</div>